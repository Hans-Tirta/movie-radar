generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorite {
  id          String  @id @default(uuid())
  userId      String
  movieId     Int
  title       String
  releaseDate String
  posterPath  String
  overview    String?
  voteAverage Float?
  voteCount   Int?
  popularity  Float?
  adult       Boolean? @default(false)
  genres      String?  // Store as comma-separated string like "Action,Adventure,Sci-Fi"
}